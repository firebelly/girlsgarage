# BEGIN redirects
RewriteEngine on
RewriteBase /

# Ensure consistent URL
RewriteCond %{REQUEST_URI} !\.well-known/acme-challenge
RewriteCond %{HTTP_HOST} !^www\.girlsgarage\.org [NC]
RewriteCond %{HTTP_HOST} !^girlsgarage\.firebelly\.co [NC]
RewriteCond %{HTTP_HOST} !^girlsgarage\.localhost [NC]
RewriteCond %{HTTP_HOST} !^girlsgarage\.sage [NC]
RewriteRule ^(.*)$ https://www.girlsgarage.org/$1 [R=301,L]

# Force SSL
RewriteCond %{REQUEST_URI} !\.well-known/acme-challenge
RewriteCond %{HTTP:X-Forwarded-SSL} !on
RewriteCond %{HTTP_HOST} !^girlsgarage\.firebelly\.co [NC]
RewriteCond %{HTTP_HOST} !^girlsgarage\.localhost [NC]
RewriteCond %{HTTP_HOST} !^girlsgarage\.sage [NC]
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# END redirects

# BEGIN WordPress
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /
RewriteRule ^index\.php$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.php [L]
</IfModule>

# END WordPress